{
  "name": "my-app",
  "version": "1.0.0",
  "description": "My super cool app",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run react:serve\" \"npm run electron:dev\"",
    "react:serve": "cross-env NODE_ENV=development webpack serve",
    "react:serve:web": "cross-env NODE_ENV=development TARGET=web webpack serve",
    "electron:dev": "nodemon",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --progress --color ",
    "build:win": "electron-builder build --win --x64"
  },
  "build": {
    "appId": "raoul2000.myapp",
    "directories": {
      "app": "./dist/",
      "output": "./out/"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "asar": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "buildVersion": "1"
  },
  "keywords": [],
  "author": "raoul2000",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.1",
    "lodash": "^4.17.20",
    "nodemon": "^2.0.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "is-electron": "^2.2.0",
    "primeflex": "^2.0.0",
    "primeicons": "^4.1.0",
    "primereact": "^6.0.1",
    "react-transition-group": "^4.4.1",
    "recoil": "^0.1.2"
  }
}
