{
  "name": "my-app",
  "version": "1.0.0",
  "description": "My super cool app",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run react:serve\" \"npm run electron:dev\"",
    "react:serve": "cross-env NODE_ENV=development webpack serve",
    "electron:dev": "nodemon",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --progress --color ",
    "build:win": "electron-builder build --win --x64"
  },
  "build": {
    "appId": "raoul2000.myapp",
    "productName": "raoul2000-my-app",
    "directories": {
      "app": "./dist/",
      "output": "./out/"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "asar": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "buildVersion": "1"
  },
  "keywords": [],
  "author": "raoul2000",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.2.0",
    "html-webpack-plugin": "^4.5.1",
    "lodash": "^4.17.20",
    "nodemon": "^2.0.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {}
}
